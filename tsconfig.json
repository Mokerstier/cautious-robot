{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2018",
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
    "baseUrl": ".",
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
